                            </p>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer code -->
    {{>footer}}
    <script src="js/main.js"></script>
    <script>

        const getCurrentDay = () => {
        let weekday = new Array(7);
        weekday[0] = "Sun";
        weekday[1] = "Mon";
        weekday[2] = "Tue";
        weekday[3] = "Wed";
        weekday[4] = "Thu";
        weekday[5] = "Fri";
        weekday[6] = "Sat";
        let currentTime = new Date();
        // <!-- console.log(weekday[currentTime.getDay()]); -->
         days = weekday[currentTime.getDay()];
         let day =document.getElementById('day');
        day.innerText=days;
      };
      getCurrentDay();
    </script>
</body>

</html>